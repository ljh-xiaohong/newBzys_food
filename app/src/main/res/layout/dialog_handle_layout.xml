<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/content"
        android:layout_width="810px"
        android:layout_height="292px"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="147px"
            android:paddingStart="117px"
            android:gravity="center_vertical"
            android:textColor="@color/black3"
            android:textSize="48px"
            android:text="拨打电话"
            />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#f9f9f9"  />


        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="147px"
            android:gravity="center_vertical"
            android:textSize="48px"
            android:textColor="@color/black3"
            android:paddingStart="117px"
            android:text="400-8891884"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_gravity="bottom"
        android:background="@null"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/negativeButton"
            android:layout_width="fill_parent"
            android:layout_height="147px"
            android:visibility="gone"
            android:background="@null"
            android:gravity="center_vertical"
            android:textSize="48px"
            android:textColor="@color/black3"
            android:paddingStart="117px"
            android:text="400-8891884"/>
</com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:background="@null"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal" >

            <!--<Button-->
                <!--android:id="@+id/negativeButton"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="40.0dip"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@null"-->
                <!--android:gravity="center"-->
                <!--android:text="取消" />-->

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="40.0dip"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/edt_hint_orange"
                android:gravity="center"
                android:text="确定" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>