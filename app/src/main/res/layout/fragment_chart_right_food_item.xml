<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50px"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="32px"
    android:background="@color/white"
    android:layout_gravity="center">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="344px"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_food_name"
       android:layout_width="match_parent"
        android:textSize="42px"
        android:layout_marginStart="69px"
        android:textColor="#5e42f4"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/chart_long"
        android:layout_width="622px"
        android:layout_marginEnd="30px"
        android:gravity="center_vertical"
        android:layout_height="50px">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:background="@drawable/chart_long"
            android:layout_height="match_parent">
       <TextView
           android:id="@+id/tv_food_count"
           android:layout_width="wrap_content"
           android:text="173"
           android:textColor="@color/white"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:layout_marginEnd="20px"
           android:textSize="30px"
           android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/tv_out_food_count"
            android:layout_width="wrap_content"
            android:text="173"
            android:visibility="gone"
            android:layout_marginStart="10px"
            android:textColor="@color/black3"
            android:textSize="30px"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
