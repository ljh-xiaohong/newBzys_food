<?xml version="1.0" encoding="utf-8"?>
    <com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="988px"
        android:background="@drawable/dialog_bg"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_marginTop="38px"
          android:layout_marginStart="92px"
          android:textSize="51px"
          android:textColor="@color/black3"
          android:text="asda"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_address"
          android:layout_width="wrap_content"
          android:layout_marginStart="92px"
          android:layout_below="@id/tv_name"
          android:layout_marginTop="33px"
          android:textSize="45px"
          android:textColor="@color/black3"
          android:text="asda"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_phone"
          android:layout_width="wrap_content"
          android:layout_below="@id/tv_address"
          android:layout_marginTop="28px"
          android:layout_marginStart="92px"
          android:textColor="@color/black3"
          android:textSize="45px"
          android:text="asda"
          android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:src="@mipmap/cancel_btn"
            android:layout_marginTop="20px"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20px"
            android:layout_height="wrap_content" />
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/desk_lay"
            android:layout_below="@id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_marginTop="70px"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_desk_name"
                android:layout_width="wrap_content"
                android:textSize="48px"
                android:textColor="@color/edt_hint_orange"
                android:text="asdada"
                android:layout_marginEnd="40px"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="48px"
                android:textColor="@color/edt_hint_orange"
                android:text="|"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_desk_no"
                android:layout_width="wrap_content"
                android:layout_marginStart="40px"
                android:textSize="48px"
                android:textColor="@color/edt_hint_orange"
                android:text="asdaaf"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        <ImageView
            android:id="@+id/img_desk"
            android:layout_width="780px"
            android:src="@mipmap/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48px"
            android:layout_below="@id/desk_lay"
            android:layout_height="780px" />
        <TextView
            android:id="@+id/tv_desk_tips"
            android:layout_width="wrap_content"
            android:layout_below="@id/img_desk"
            android:layout_marginStart="92px"
            android:layout_marginTop="43px"
            android:textSize="45px"
            android:textColor="@color/black3"
            android:text="扫一扫即可远程点菜，小二提前为您服务！"
            android:layout_height="wrap_content" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desk_tips"
            android:orientation="horizontal"
            android:layout_marginBottom="58px"
            android:layout_centerHorizontal="true">
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/save_lay"
            android:layout_width="300px"
            android:layout_marginTop="57px"
            android:orientation="horizontal"
            android:layout_marginEnd="135px"
            android:gravity="center"
            android:background="@drawable/btn_orange"
            android:layout_height="99px">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/save_code"
                android:layout_marginEnd="21px"
                android:layout_below="@id/desk_lay"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/img_desk"
                android:textSize="48px"
                android:textColor="@color/white"
                android:text="保存"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/share_lay"
            android:layout_width="300px"
            android:layout_marginTop="57px"
            android:layout_toEndOf="@id/save_lay"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btn_red"
            android:layout_height="99px">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/share_code"
                android:layout_marginEnd="21px"
                android:layout_below="@id/desk_lay"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/img_desk"
                android:textSize="48px"
                android:textColor="@color/white"
                android:text="分享"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>