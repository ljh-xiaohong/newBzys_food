<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280px"
    android:background="@color/white">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/order_layout"
        android:background="@color/white"
        android:layout_height="280px">
    <ImageView
        android:id="@+id/img_order_list"
        android:layout_margin="20px"
        android:layout_width="240px"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:layout_height="240px" />

    <ImageView
        android:id="@+id/img_order_staue"
        android:layout_margin="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

        <TextView
            android:id="@+id/tv_order_list_name"
            android:text="中国画"
            android:textColor="@color/black3"
            android:layout_marginTop="20px"
            android:textSize="39px"
            android:layout_toRightOf="@id/img_order_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lay_goods_type_arrow_down"
        android:layout_width="85px"
        android:layout_alignParentEnd="true"
        android:layout_height="65px">
    <ImageView
        android:id="@+id/iv_goods_type_arrow_down"
        android:layout_width="28px"
        android:layout_height="15px"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"
        android:focusable="false"
        android:src="@mipmap/pull_down"
        />
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_order_list_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51px"
        android:layout_marginTop="38px"
        android:textColor="@color/black6"
        android:textSize="34px"
        android:text="123"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_order_delect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_order_no"
        android:layout_marginTop="30px"
        android:layout_marginEnd="21px"
        android:layout_below="@+id/tv_order_list_name"
        android:src="@mipmap/order_delect"/>
        <TextView
            android:id="@+id/tv_order_list_id"
            android:text="小红帽"
            android:layout_toRightOf="@+id/img_order_list"
            android:layout_below="@id/tv_order_list_name"
            android:textSize="30px"
            android:layout_marginTop="38px"
            android:textColor="@color/black3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
            android:id="@+id/tv_order_list_number"
            android:layout_marginLeft="20px"
            android:textColor="@color/black3"
            android:layout_marginTop="38px"
            android:textSize="30px"
            android:layout_toRightOf="@+id/tv_order_list_id"
            android:layout_below="@id/tv_order_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:layout_toRightOf="@+id/img_order_list"
    android:layout_below="@id/tv_order_list_id"
    android:layout_marginTop="25px"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34px"
        android:textColor="@color/black6"
        android:text="¥"/>
    <TextView
        android:id="@+id/tv_order_list_money"
        android:text="订单号：10010"
        android:textColor="@color/black6"
        android:textSize="36px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
/>
</com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_order_list_remark"
        android:textColor="@color/black6"
        android:textSize="27px"
        android:layout_marginBottom="20px"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_order_list"
         />

    <ImageView
        android:id="@+id/img_order_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/saled"
        android:layout_margin="20px"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_order_list_remark"
         />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
