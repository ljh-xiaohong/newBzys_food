<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="21px"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_table_no"
            android:layout_width="850px"
            android:layout_height="110px"
            android:textSize="39px"
            android:hint="请输入要换的新桌号"/>
        <TextView
            android:id="@+id/tv_table_sure"
            android:layout_width="165px"
            android:layout_height="99px"
            android:layout_toEndOf="@+id/edt_table_no"
            android:layout_marginStart="-10px"
            android:gravity="center"
            android:textSize="45px"
            android:background="@color/edt_hint_orange"
            android:textColor="@color/white"
            android:text="确定"/>
    </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="你可以选择以下桌台"
            android:textSize="45px"
            android:layout_marginTop="21px"
            android:gravity="center_vertical"
            android:textColor="@color/black3"
            android:layout_marginStart="20px"
            android:layout_height="141px" />
    <ScrollView
        android:id="@+id/tools_scrlllview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10px"
        android:layout_marginEnd="10px"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        android:fadingEdge="none"
        android:scrollbars="none" >
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoFrameLayout>